<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:design="http://schemas.android.com/apk/res-auto"
            android:id="@+id/feedFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context="com.soundchkapp.soundchk.MainActivityBottomBar"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@color/colorBlack">

       <Button
            android:text="DR. GRIFFS"
            android:background="@drawable/griffs"
            android:scaleType="fitXY"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorWhite"
            android:visibility="visible"
            android:id="@+id/button"
            android:elevation="0dp"
               
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:layout_alignParentLeft="true"
            />

        <Button
            android:text="THE LITTLE BOX"
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:background="@drawable/littlebox"
            android:scaleType="fitCenter"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/colorWhite"
            android:visibility="visible"


            android:layout_toRightOf="@id/button"
            android:layout_alignParentRight="true"
            android:id="@+id/button2" />

        <Button
            android:text="CONCERT REVIEWS"
            android:background = '@drawable/pinegrove'
            android:layout_height="150dp"
            android:layout_width="match_parent"
            android:layout_below="@id/button"
            android:id="@+id/button3"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:visibility="visible"
            android:textColor="@color/colorWhite"/>
            

        <Button
            android:text="ROB LAVAQUE"
            android:layout_height="200dp"
            android:layout_width="125dp"
            android:layout_below="@id/button3"
            android:layout_alignParentLeft="true"
            android:background="@drawable/lavaque"
            android:id="@+id/button4"
            android:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:text="EVENTS"
            android:background="@drawable/bugjar"
            android:layout_height="200dp"
            android:layout_width="125dp"
            android:layout_toRightOf="@id/button4"
            android:layout_below="@id/button3"
            android:id="@+id/button5"
            android:visibility="visible"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <Button
            android:text="ALBUM REVIEWS"
            android:layout_height="200dp"
            android:layout_width="125dp"
            android:layout_below="@id/button3"
            android:layout_toRightOf="@id/button5"
            android:layout_alignParentRight="true"
            android:background='@drawable/delp3'
            android:scaleType="fitCenter"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:visibility="visible"
            android:id="@+id/button6" />

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            design:menu="@menu/menu" />

    </RelativeLayout>
</ScrollView>



